@{
    ViewBag.Title = "Réservation d'un voyage - Paiement";
}

<h2>Réservation du voyage</h2>
<br />
@using (Html.BeginForm("Paiement", "Home", FormMethod.Post, new { enctype = "multipart/form-data", @class = "needs-validation", novalidate = "novalidate" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Paiement du voyage</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <h1>En développement</h1>

        <!--Bouton validation-->
        <div class="col-12">
            <button class="btn btn-primary" type="submit">Payer</button>
            @(Html.ActionLink("Retourner à la liste des voyages et annuler", "Index", "Home", new { area = "" }, new { @class = "btn btn-secondary" }))
        </div>
    </div>
}