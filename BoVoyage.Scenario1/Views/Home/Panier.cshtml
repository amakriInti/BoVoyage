@model List<BoVoyage.Scenario1.Dal.ItemPanier>

@{ ViewBag.Title = "Panier"; }

    @if (Model == null)
    {
        <h3>Le panier est vide</h3>

        @Html.ActionLink("Retour Accueil", "Index") 
    }

    else
    {
        <h2>Votre panier contient</h2> 
        foreach (var v in Model)
        {
            <hr />
            <p>Voyage : @v.voyage.Libelle | Nombre voyageurs : @v.nombre_voyageurs</p> 
        }
        @Html.ActionLink("Continuer Mes achats", "Index")
        <br />
        @Html.ActionLink("Valider et Payer", "ValiderPanier")
    }


