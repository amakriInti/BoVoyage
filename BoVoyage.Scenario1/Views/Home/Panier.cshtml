@model List<BoVoyage.Scenario1.Dal.LignePanier>

@{
    ViewBag.Title = "Panier";
}

@{
    if (Model == null || Model.Count == 0)
    {
        <h3>Le panier est vide</h3>
    }

    else
    {
        <h2>Votre panier contient</h2>
        <table>
            <thead>
                <tr>
                    <th>Voyage</th>
                    <th>Nombre de voyageurs</th>
                    <th>Prix Unitaire</th>
                    <th>Montant</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a>
                            <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>

                }
            </tbody>

        </table>
    }

} 