
@{
    ViewBag.Title = "LectureCsv";
}

<script src="/Scripts/jquery-3.4.1.min.js"></script>
<style>
    #div1 {
        display: flex;
        justify-content: center;
    }

    .tailleimage {
        /*width: 80%;*/
        height: 70%;
        margin: 10px;
    }

    .dimTd {
        text-align: center;
        width: 150px;
        height: 190px;
        margin: 5px;
    }
</style>

<h1 style="text-align:center">Liste des voyages proposés</h1>

<h3 style="color: @ViewBag.color">@ViewBag.ajoutok</h3>
<div>
    Voyage :
    <select id="lieu">
        <option> </option>
        <option value="Continent"> Continent</option>
        <option value="Pays"> Pays</option>
        <option value="Region"> Region</option>
    </select>
    <input type="text" id="txtlieu" />
    <!-- <input type="button" id="listeAlbum" value="Go" / >-->
    <br /> <br />
    <input type="button" id="listeVoyageTrie" value="Go" />
    <br /> <br />

    <div id="div1"><p> on va marqué ici</p> </div>
</div>

<script>

    $('#listeVoyageTrie').click(function () {
        var lieu = $('#lieu').val();
        var txtlieu = $('#txtlieu').val();
        $.ajax({
            type: "GET",
            url: "https://localhost:44307//Api/Voyages/?lieu=" + lieu + "&txtlieu=" + txtlieu,
            datatype: 'application/json',
            contentType: 'application/json',
            success: function (data, status) {
                if (status == "success") {
                    fragment = "<table>";
                    for (var i = 0; i < data.length; i++) {
                        fragment += "<tr><td>" +
                            "<p>" + data[i].Pays + data[i].Continent + " </p></td>";
                    }
                    fragment += "</tr></table>"
                    $('#div1').html(fragment);
                }
            },
            error: function (xhr, status, error) {
                $('#div1').html("Erreur");
            }
        });
    })

</script>
